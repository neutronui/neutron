{
  "name": "@neutron-ui/neutron",
  "version": "0.1.2",
  "license": "MIT",
  "author": {
    "name": "Nathan Brown",
    "email": "me@nathanbrown.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neutronui/neutron.git"
  },
  "bugs": {
    "url": "https://github.com/neutronui/neutron/issues"
  },
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist/",
    "README.md",
    "package.json",
    "LICENSE"
  ],
  "keywords": [
    "ui",
    "html",
    "css",
    "design-system",
    "component-library",
    "neutron",
    "neutron-ui",
    "modern",
    "web",
    "postcss",
    "frontend",
    "themes",
    "utilities",
    "palette",
    "colors",
    "oklch",
    "accessible",
    "responsive",
    "web-standards"
  ],
  "exports": {
    ".": {
      "import": "./dist/main.css",
      "default": "./dist/main.css.br"
    },
    "./ui/*/*.css": {
      "import": "./dist/ui/*/*.css"
    },
    "./bundle.css": {
      "import": "./dist/bundle.css",
      "default": "./dist/bundle.css.br"
    },
    "./utils/*.css": {
      "import": "./dist/utilities/*.css"
    },
    "./palette/*.css": {
      "import": "./dist/color/*.css"
    },
    "./theme/*.css": {
      "import": "./dist/themes/*.css"
    }
  },
  "scripts": {
    "build:clean": "rimraf -rf dist",
    "build": "npm run build:clean && node ./esbuild.mjs",
    "change": "changeset",
    "dev": "http-server -o",
    "release:ci": "changeset publish",
    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "esbuild": "^0.25.12",
    "esbuild-postcss": "^0.0.4",
    "http-server": "^14.1.1",
    "parcel": "^2.16.1",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-preset-env": "^10.4.0",
    "postcss-url": "^10.1.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  }
}
