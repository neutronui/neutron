{
  "name": "@neutron-ui/substrate",
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "name": "Nathan Brown",
    "email": "me@nathanbrown.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neutronui/substrate.git"
  },
  "bugs": {
    "url": "https://github.com/neutronui/substrate/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/main.css"
    },
    "./palette/*.css": {
      "import": "./dist/color/*/*.css"
    }
  },
  "scripts": {
    "build:clear": "rimraf -rf dist",
    "build:css": "npm run build:clear && parcel build --dist-dir dist"
  },
  "devDependencies": {
    "@csstools/postcss-random-function": "^2.0.1",
    "esbuild": "^0.25.11",
    "parcel": "^2.16.0",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-preset-env": "^10.4.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "targets": {
    "themes": {
      "source": "src/themes/*.css",
      "distDir": "dist",
      "isLibrary": true,
      "optimize": false,
      "sourceMap": false
    },
    "utils": {
      "source": "src/utilities/*.css",
      "distDir": "dist",
      "isLibrary": true,
      "optimize": false,
      "sourceMap": false
    },
    "bundle": {
      "source": "src/main.css",
      "distDir": "dist",
      "isLibrary": true,
      "optimize": true,
      "sourceMap": false
    }
  }
}
